[alias]
  co = checkout
  ci = commit
  st = status
  l = !git --no-pager log -n 20
  gi = "!gi() { curl -s https://www.gitignore.io/api/$@ ;}; gi"
  stat = !git diff --stat
  fpull = !git fetch origin && git reset --hard FETCH_HEAD
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = $HOME.gitignore
  editor = vim
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
  default = current
[help]
  autocorrect = 5
[include]
  path = ~/.gitcredentials
[http]
  cookiefile = ~/.gitcookies
[rerere]
  enabled = true
